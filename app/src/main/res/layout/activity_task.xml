<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ibraheem3"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".TaskActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#D40031"
        android:backgroundTintMode="add"
        android:fontFamily="sans-serif"
        android:text="Add New Task "
        android:textSize="48sp" />


    <EditText
        android:id="@+id/edittxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#9C27B0"
        android:ems="10"
        android:hint="Enter Name Task"
        android:inputType="text"
        android:textSize="24dp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/edittxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#389118"
        android:ems="10"
        android:hint="Enter Status"
        android:inputType="text"
        android:textSize="24dp"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Save"
        android:onClick="btnsaveOnClick"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#A61616"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />


</androidx.appcompat.widget.LinearLayoutCompat>